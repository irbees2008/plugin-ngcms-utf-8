<table border="0" width="100%" cellspacing="0" cellpadding="0">
	<tr>
		<td>
		<table border="0" width="100%" cellspacing="0" cellpadding="0">
			<tr>
				<td>
				<img border="0" src="{tpl_url}/images/2z_40.gif" width="7" height="36" /></td>
				<td style="background-image:url('{tpl_url}/images/2z_41.gif');" width="100%">&nbsp;<img border="0" src="{tpl_url}/images/bib.gif" />&nbsp;<b><font color="#FFFFFF">Пожалуйста, заполните форму!</font></b></td>
				<td>
				<img border="0" src="{tpl_url}/images/2z_44.gif" width="7" height="36" /></td>
			</tr>
		</table>
		</td>
	</tr>
	<tr>
		<td>
		<table class="b" border="0" width="100%" cellspacing="0" cellpadding="0">
			<tr>
				<td style="background-image:url('{tpl_url}/images/2z_54.gif');" width="7">&nbsp;</td>
				<td bgcolor="#FFFFFF">
				<form method="post" action="{formurl}">
					<table>
						<tr>
							<td width="40%" style="padding: 5px; background-color: #f9fafb;" class="entry"><b>Ваше имя:</b></td>
							<td width="60%" style="padding: 5px; background-color: #f9fafb;" class="entry">{changername}</td>
						</tr>
						<tr>
							<td style="padding: 5px;" class="entry"><b>Кому меняете:</b></td>
							<td style="padding: 5px;" class="entry">{username}</td>
						</tr>
						<tr>
							<td style="padding: 5px; background-color: #f9fafb;" class="entry"><b>Действие:</b></td>
							<td style="padding: 5px; background-color: #f9fafb;" class="entry">{action}</td>
						</tr>
						<tr>
							<td style="padding: 5px; background-color: #f9fafb;" class="entry"><b>Изменено на:</b></td>
							<td style="padding: 5px; background-color: #f9fafb;" class="entry">{url}</td>
						</tr>
						<tr>
							<td style="padding: 5px;" class="entry"><b>Комментарий:</b></td>
							<td style="padding: 5px;" class="entry"><textarea name="comment" rows="7" cols="55"></textarea></td>
						</tr>
					</table>
					<table border="0" width="100%" cellspacing="0" cellpadding="0">
						<tr align="center">
							<td width="100%" class="contentEdit" align="center" valign="top">
								<input type="submit" value="Изменить" class="fbutton" />
								<input type="hidden" name="uid" value="{uid}" />
								<input type="hidden" name="url" value="{url}" />
								<input type="hidden" name="act" value="{act}" />
							</td>
						</tr>
					</table>
				</form>
				</td>
				<td style="background-image:url('{tpl_url}/images/2z_59.gif');" width="7">&nbsp;</td>
			</tr>
		</table>
		</td>
	</tr>
	<tr>
		<td>
		<table border="0" width="100%" cellspacing="0" cellpadding="0">
			<tr>
				<td>
				<img border="0" src="{tpl_url}/images/2z_68.gif" width="7" height="4" /></td>
				<td style="background-image:url('{tpl_url}/images/2z_69.gif');" width="100%"></td>
				<td>
				<img border="0" src="{tpl_url}/images/2z_70.gif" width="7" height="4" /></td>
			</tr>
		</table>
		</td>
	</tr>
